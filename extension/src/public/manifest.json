{
  "manifest_version": 3,
  "name": "Clarity - Text Simplifier",
  "description": "Improve text readability instantly with just one click!",
  "version": "1.0.1",
  "icons": {
    "16": "./icons/Icon16.png",
    "32": "./icons/Icon32.png",
    "48": "./icons/Icon48.png",
    "128": "./icons/Icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "./icons/Icon16.png",
      "24": "./icons/Icon24.png",
      "32": "./icons/Icon32.png"
    },
    "default_title": "Clarity - Text Simplifier",
    "default_popup": "./actionMenu/index.html"
  },
  "background": {
    "service_worker": "./worker/worker.index.js"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "contextMenus",
    "identity",
    "identity.email"
  ],
  "key": "",
  "oauth2": {
    "client_id": "939648216160-mrd2b0h2h9v9gunoprk8dp6rhni2540h.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/userinfo.email"]
  },
  "externally_connectable": {
    "matches": ["<all_urls>"]
  }
}
