{
  "manifest_version": 3,
  "name": "Clarity - Text Simplifier",
  "description": "Improve text readability instantly with just one click!",
  "version": "1.0.1",
  "icons": {
    "16": "./icons/Icon16.png",
    "32": "./icons/Icon32.png",
    "48": "./icons/Icon48.png",
    "128": "./icons/Icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "./icons/Icon16.png",
      "24": "./icons/Icon24.png",
      "32": "./icons/Icon32.png"
    },
    "default_title": "Clarity - Text Simplifier",
    "default_popup": "./actionMenu/index.html"
  },
  "background": {
    "service_worker": "./worker/index.js"
  },
  "permissions": ["scripting", "activeTab", "contextMenus"],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  }
}
